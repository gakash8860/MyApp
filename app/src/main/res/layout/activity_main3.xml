<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="Which Type of Food Do You Want ??"
        android:textStyle="italic|bold"
        android:textSize="25dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/india"
        android:layout_width="159dp"
        android:layout_height="139dp"
        tools:srcCompat="@drawable/ifood" />

    <Button
        android:id="@+id/indfood"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Indian" />

    <ImageView
        android:id="@+id/italian"
        android:layout_width="157dp"
        android:layout_height="120dp"
        tools:srcCompat="@drawable/italiannnn" />

    <Button
        android:id="@+id/itfood"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:text="Italian" />

    <ImageView
        android:id="@+id/chinese"
        android:layout_width="155dp"
        android:layout_height="105dp"
        tools:srcCompat="@drawable/chinese" />

    <Button
        android:id="@+id/chfood"
        android:layout_width="165dp"
        android:layout_height="44dp"
        android:text="Chinese" />

    <ImageView
        android:id="@+id/mexican"
        android:layout_width="154dp"
        android:layout_height="105dp"
        tools:srcCompat="@drawable/mexican" />

    <Button
        android:id="@+id/mxfood"
        android:layout_width="158dp"
        android:layout_height="43dp"
        android:text="Mexican" />

</LinearLayout>

</ScrollView>
